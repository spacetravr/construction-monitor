{
  "name": "ROS2 Humble Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-iot.vscode-ros",
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools",
    "ms-python.python"
  ],
  "postCreateCommand": "sudo rosdep update || true && source /opt/ros/humble/setup.bash",
  "remoteUser": "vscode"
}
